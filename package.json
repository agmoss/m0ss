{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agmoss/m0ss.git"
  },
  "license": "MIT",
  "author": "Andrew Moss <andrew@m0ss.dev> (https://m0ss.dev/)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "bootstrap:clean": "lerna clean -y && lerna bootstrap --use-workspaces",
    "format:prettier": "lerna run format --stream --parallel --scope=m0ss",
    "format:package-json": "sort-package-json 'packages/*/package.json' 'package.json'",
    "lint:eslint": "lerna run lint --stream --parallel --scope=m0ss",
    "lint:markdown": "markdownlint --ignore coverage --ignore dist --ignore **/node_modules/** '**/*.md' '.**/**/*.md'",
    "lint": "run-s lint:*",
    "format": "run-s format:*"
  },
  "dependencies": {
    "markdownlint-cli": "^0.32.2",
    "sort-package-json": "^1.55.0"
  },
  "devDependencies": {
    "lerna": "^5.5.2",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "16.X",
    "yarn": ">=1.19.1"
  }
}

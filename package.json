{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agmoss/m0ss.git"
  },
  "license": "MIT",
  "author": "Andrew Moss <andrew@m0ss.dev> (https://m0ss.dev/)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:m0ss": "turbo run build --filter=m0ss...",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=m0ss^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "latest",
    "eslint": "8.36.0",
    "eslint-config-m0ss": "*",
    "markdownlint-cli": "latest",
    "npm-run-all": "latest",
    "prettier": "^2.8.4",
    "sort-package-json": "latest",
    "turbo": "1.8.3"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": "18.X",
    "yarn": "1.X"
  }
}
